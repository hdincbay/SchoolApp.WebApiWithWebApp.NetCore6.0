@model User

<div class="container">
    <div class="col-md-8 offset-md-2">
        <form asp-controller="User" asp-action="Login" method="post">
            <div class="form-group">
                <div class="form-group col-md-6">
                    <label asp-for="Password">Password</label>
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Password">Password</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Parola">
                </div>
            </div>
            <button type="submit" class="btn btn-primary my-2">Giriş Yap</button>
        </form>
    </div>
</div>